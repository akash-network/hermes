{
    "name": "akash-hermes-client",
    "version": "1.0.0",
    "description": "Hermes client for updating Akash oracle with Pyth price data",
    "main": "dist/hermes-client.js",
    "types": "dist/hermes-client.d.ts",
    "bin": {
        "hermes-cli": "dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/hermes-client.js",
        "dev": "ts-node src/hermes-client.ts",
        "watch": "tsc --watch",
        "clean": "rm -rf dist",
        "cli": "ts-node src/cli.ts",
        "cli:update": "npm run cli -- update",
        "cli:query": "npm run cli -- query",
        "cli:status": "npm run cli -- status",
        "cli:daemon": "npm run cli -- daemon",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "akash",
        "pyth",
        "hermes",
        "oracle",
        "price-feed"
    ],
    "author": "",
    "license": "Apache-2.0",
    "dependencies": {
        "@cosmjs/cosmwasm-stargate": "^0.38.0",
        "@cosmjs/proto-signing": "^0.38.0",
        "@cosmjs/stargate": "^0.38.0",
        "axios": "^1.7.0",
        "commander": "^12.0.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@vitest/coverage-v8": "^4.0.18",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0",
        "vitest": "^4.0.18"
    }
}

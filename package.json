{
    "name": "akash-hermes-client",
    "version": "1.0.0",
    "description": "Hermes client for updating Akash oracle with Pyth price data",
    "main": "dist/hermes-client.js",
    "types": "dist/hermes-client.d.ts",
    "type": "module",
    "bin": {
        "hermes-cli": "dist/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "start": "node dist/cli.js daemon",
        "dev": "NODE_ENV=development node --experimental-strip-types --watch src/cli.ts daemon",
        "clean": "rm -rf dist",
        "cli": "node --experimental-strip-types src/cli.ts",
        "cli:update": "npm run cli -- update",
        "cli:query": "npm run cli -- query",
        "cli:status": "npm run cli -- status",
        "cli:daemon": "npm run cli -- daemon",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "akash",
        "pyth",
        "hermes",
        "oracle",
        "price-feed"
    ],
    "author": "Akash Network",
    "license": "Apache-2.0",
    "dependencies": {
        "@cosmjs/cosmwasm-stargate": "^0.38.0",
        "@cosmjs/proto-signing": "^0.38.0",
        "@cosmjs/stargate": "^0.38.0",
        "@noble/curves": "^1.9.7",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/exporter-prometheus": "^0.211.0",
        "@opentelemetry/instrumentation-runtime-node": "^0.24.0",
        "@opentelemetry/resource-detector-container": "^0.8.2",
        "@opentelemetry/resources": "^2.5.0",
        "@opentelemetry/sdk-node": "^0.211.0",
        "commander": "^12.0.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@stylistic/eslint-plugin": "^5.8.0",
        "@types/node": "^24.0.0",
        "@vitest/coverage-v8": "^4.0.18",
        "eslint": "^9.39.2",
        "typescript": "^5.9.0",
        "typescript-eslint": "^8.54.0",
        "vitest": "^4.0.18",
        "vitest-mock-extended": "^3.1.0"
    },
    "engines": {
        "node": "^24.13.0"
    },
    "volta": {
        "node": "24.13.0"
    }
}
